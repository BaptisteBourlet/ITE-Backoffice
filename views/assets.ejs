                Ext.getBody().mask("Saving", "x-msg-loading");
                Ext.Ajax.request({
                    url: "/api/addAssets",
                    method: "POST",
                    cors: true,
                    useDefaultXhrHeader: false,
                    params: {
                        Type: Ext.getCmp("Type").getValue(),
                        ProductId: Ext.getCmp("ProductId").getValue(),
                        SerieId: Ext.getCmp("SerieId").getValue(),
                        Path: Ext.getCmp("SerieId").getValue(),
