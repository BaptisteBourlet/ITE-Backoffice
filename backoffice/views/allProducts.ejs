            let keys = Object.keys(res[0]);

            let allColumns = keys.map(key => { //ongoing
              let width = 150;
              if (key === 'Name') {
                width = 300;
              }

              if (key !== "Name" && key !== "id" && key !== "Code" && key !== "SPLid") {
                return {
                  header: key,
                  sortable: true,
                  width: width,
                  dataIndex: key,
                  editor: {
