                           },
                           sort: parseInt(key.slice(-1))
                        }
                     } else if (key == "SPLid" || key == "SerieMasterId") {
                        return {
                           header: key,
                           sortable: true,
                           width: width,
                           dataIndex: key,
                           hidden: true
                        }
